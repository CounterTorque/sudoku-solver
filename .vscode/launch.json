    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: cli with default args",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/solver/cli.py",
            "console": "integratedTerminal",
            "args": "solve ${workspaceFolder}/test-files/data/Puzzle1.csv ./"
        }
    ]
}